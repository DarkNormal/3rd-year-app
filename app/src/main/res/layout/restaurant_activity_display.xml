<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:scrollbars="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
<RelativeLayout
    android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/restaurantDisplay">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/passedRestaurantName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <LinearLayout
        android:layout_width = "fill_parent"
        android:layout_height = "wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/passedRestaurantName"
        android:layout_alignParentStart="true"
        android:layout_marginTop="96dp"
        android:background="#fff9fff1"
        android:id="@+id/linearLayout">

        <Button
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_height = "wrap_content"
            android:id="@+id/infoTab"
            android:text = "Info"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#ff2b8bff"
            android:textColor="#FFF9FFF1"
            android:onClick="changeTabs"
            android:singleLine="false" />
        <Button
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_height = "wrap_content"
            android:id="@+id/reviewsTab"
            android:text = "Reviews"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#FFF9FFF1"
            android:background="#ff2b8bff"
            android:onClick="changeTabs"/>
        <Button
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_height = "wrap_content"
            android:id="@+id/bookingTab"
            android:background="#ff2b8bff"
            android:text = "Book"
            android:textColor="#FFF9FFF1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="changeTabs"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/linearLayout"
        android:id="@+id/tabsLayout"/>


</RelativeLayout>
</ScrollView>