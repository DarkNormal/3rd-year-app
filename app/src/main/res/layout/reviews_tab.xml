<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:id="@+id/reviewTab">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is the reviews tab"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView2" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rating"
        android:src="@drawable/emptystar"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp" />

    <TableLayout  android:layout_width="match_parent"
        android:layout_height="wrap_content"></TableLayout>

    <TableRow
        android:id="@+id/tableRow"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_below="@+id/rating"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/onestar"
            android:layout_marginTop="43dp"
            android:src="@drawable/small_gold_star2"
            android:layout_below="@+id/rating"
            android:layout_toStartOf="@+id/textView2"
            android:clickable="true"
            android:onClick="submitReview"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/onehalfstar"
            android:layout_marginTop="43dp"
            android:src="@drawable/half_star"
            android:layout_below="@+id/rating"
            android:layout_toStartOf="@+id/textView2"
            android:clickable="true"
            android:onClick="submitReview"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/twostar"
            android:layout_marginTop="43dp"
            android:src="@drawable/small_gold_star2"
            android:layout_below="@+id/rating"
            android:layout_toStartOf="@+id/textView2"
            android:clickable="true"
            android:onClick="submitReview"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/twohalfstar"
            android:layout_marginTop="43dp"
            android:src="@drawable/half_star"
            android:layout_below="@+id/rating"
            android:layout_toStartOf="@+id/textView2"
            android:clickable="true"
            android:onClick="submitReview"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/threestar"
            android:layout_marginTop="43dp"
            android:src="@drawable/small_gold_star2"
            android:layout_below="@+id/rating"
            android:layout_toStartOf="@+id/textView2"
            android:clickable="true"
            android:onClick="submitReview"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/threehalfstar"
            android:layout_marginTop="43dp"
            android:src="@drawable/half_star"
            android:layout_below="@+id/rating"
            android:layout_toStartOf="@+id/textView2"
            android:clickable="true"
            android:onClick="submitReview"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fourstar"
            android:layout_marginTop="43dp"
            android:src="@drawable/small_gold_star2"
            android:layout_below="@+id/rating"
            android:layout_toStartOf="@+id/textView2"
            android:clickable="true"
            android:onClick="submitReview"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fourhalfstar"
            android:layout_marginTop="43dp"
            android:src="@drawable/half_star"
            android:layout_below="@+id/rating"
            android:layout_toStartOf="@+id/textView2"
            android:clickable="true"
            android:onClick="submitReview"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fivestar"
            android:layout_marginTop="43dp"
            android:src="@drawable/small_gold_star2"
            android:layout_below="@+id/rating"
            android:layout_toStartOf="@+id/textView2"
            android:clickable="true"
            android:onClick="submitReview"/>

    </TableRow>


</RelativeLayout>